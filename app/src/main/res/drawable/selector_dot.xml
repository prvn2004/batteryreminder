<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected: White Circle -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                    <size android:width="10dp" android:height="10dp"/>
                </shape>
            </item>
            <!-- Transparent padding around the dot to force spacing -->
            <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
                <shape android:shape="oval"><solid android:color="@android:color/transparent"/></shape>
            </item>
        </layer-list>
    </item>

    <!-- Default: Gray Circle -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/gray_light"/>
                    <size android:width="10dp" android:height="10dp"/>
                </shape>
            </item>
            <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
                <shape android:shape="oval"><solid android:color="@android:color/transparent"/></shape>
            </item>
        </layer-list>
    </item>
</selector>