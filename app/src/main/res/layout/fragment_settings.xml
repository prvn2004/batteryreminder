<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingBottom="64dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="CONFIGURATION"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:letterSpacing="0.15"
            android:textStyle="bold" />

        <!-- Threshold Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="THRESHOLDS"
                android:textColor="@color/gray_light"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/btnAddThreshold"
                android:text="+ ADD NEW"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvThresholds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="24dp"/>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_dark" android:layout_marginBottom="24dp"/>

        <!-- DURATION SECTION -->
        <TextView
            android:text="ALERT DURATION"
            android:textColor="@color/gray_light"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3s"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Sec"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_bg"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip10s"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Sec"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_bg"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip30s"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Sec"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_bg"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInfinite"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Until Dismissed"
                android:textColor="@color/selector_chip_text"
                app:chipBackgroundColor="@color/selector_chip_bg"/>

        </com.google.android.material.chip.ChipGroup>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_dark" android:layout_marginBottom="24dp"/>

        <!-- PREDICTION SECTION -->
        <TextView
            android:text="INTELLIGENT PREDICTION"
            android:textColor="@color/gray_light"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:text="Emergency Countdown Trigger"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView
                android:text="Calculates drain rate. Alerts when time remaining is below:"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:layout_marginBottom="12dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderPrediction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="60"
                android:valueTo="600"
                android:stepSize="30"
                android:value="120"
                app:thumbColor="@color/white"
                app:trackColorActive="@color/white"
                app:trackColorInactive="@color/gray_light"/>

            <TextView
                android:id="@+id/tvPredictionValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 Minutes"
                android:textColor="@color/white"
                android:gravity="end"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_light" android:layout_marginVertical="12dp" android:alpha="0.5"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestPrediction"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="SIMULATE PREDICTION ALERT"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"/>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_dark" android:layout_marginBottom="24dp"/>

        <!-- SMART PROTECTION SECTION -->
        <TextView
            android:text="SMART PROTECTION"
            android:textColor="@color/gray_light"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchThermal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thermal Watchdog (>42°C)"
                android:textColor="@color/white"
                app:thumbTint="@color/white"
                app:trackTint="@color/gray_light"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchGhost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghost Drain Detective"
                android:textColor="@color/white"
                app:thumbTint="@color/white"
                app:trackTint="@color/gray_light"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchBedtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bedtime Charge Reminder"
                android:textColor="@color/white"
                app:thumbTint="@color/white"
                app:trackTint="@color/gray_light"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_dark" android:layout_marginBottom="24dp"/>

        <!-- Actions Section -->
        <TextView
            android:text="ALERTS and TRIGGERS"
            android:textColor="@color/gray_light"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Sound Card -->
        <LinearLayout
            android:id="@+id/cardSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView android:src="@drawable/ic_settings" android:layout_width="24dp" android:layout_height="24dp" app:tint="@color/white" android:layout_marginEnd="16dp"/>

                <TextView
                    android:text="Audio Alert"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/ivSoundCheck"
                    android:src="@drawable/ic_battery_std"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/black"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnSelectSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Custom Sound >"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="end"
                android:paddingTop="12dp"
                android:alpha="0.7"/>
        </LinearLayout>

        <!-- Flash Card -->
        <LinearLayout
            android:id="@+id/cardFlash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Strobe Flash"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivFlashCheck"
                android:src="@drawable/ic_battery_std"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/black"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Vibration Card -->
        <LinearLayout
            android:id="@+id/cardVib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Vibration"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivVibCheck"
                android:src="@drawable/ic_battery_std"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/black"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- TTS Card -->
        <LinearLayout
            android:id="@+id/cardTts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:text="Voice Alert (TTS)"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivTtsCheck"
                android:src="@drawable/ic_battery_std"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/black"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- DIAGNOSTIC NTEST BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTestAlert"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RUN ALERT DIAGNOSTIC"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            android:layout_gravity="center"/>

        <!-- ADDED: About / Privacy Section -->
        <TextView
            android:text="ABOUT &amp; PRIVACY"
            android:textColor="@color/gray_light"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_outlined"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/battery"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:text="AIO Battery"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="v1.0 • Offline"
                        android:textColor="@color/gray_light"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_dark" android:layout_marginVertical="16dp"/>

            <TextView
                android:text="100% Private. Written by AI &amp; Human Mind (@praveen)."
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettingsGithub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Source Code"
                app:icon="@drawable/ic_github"
                app:iconTint="@color/black"
                android:textColor="@color/black"
                app:backgroundTint="@color/white"/>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>