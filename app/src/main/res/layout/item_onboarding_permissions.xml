<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/battery"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Permissions"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To ensure the app can protect your battery and alert you effectively, we need the following permissions."
            android:textColor="@color/gray_light"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginBottom="32dp"/>

        <!-- 1. Notification Permission -->
        <LinearLayout
            android:id="@+id/btnGrantNotifs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="Notifications"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="To show battery stats and alerts."
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivCheckNotifs"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_battery_std"
                app:tint="@color/green"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvGrantNotifs"
                android:text="GRANT"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 2. Overlay Permission -->
        <LinearLayout
            android:id="@+id/btnGrantOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="Display Over Other Apps"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Crucial for full-screen emergency alerts."
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivCheckOverlay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_battery_std"
                app:tint="@color/green"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvGrantOverlay"
                android:text="GRANT"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 3. System Settings -->
        <LinearLayout
            android:id="@+id/btnGrantSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="Modify System Settings"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="To adjust performance/timeout during alerts."
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivCheckSettings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_battery_std"
                app:tint="@color/green"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvGrantSettings"
                android:text="GRANT"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 4. Battery Optimization (NEW) -->
        <LinearLayout
            android:id="@+id/btnGrantBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_outlined"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="Disable Battery Saver"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="REQUIRED to prevent app from sleeping."
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivCheckBattery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_battery_std"
                app:tint="@color/green"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvGrantBattery"
                android:text="ALLOW"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>