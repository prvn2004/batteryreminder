<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Top Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DASHBOARD"
            android:textColor="@color/gray_light"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"/>

        <!-- Main Progress Circle -->
        <FrameLayout
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginBottom="48dp">

            <ProgressBar
                android:id="@+id/progressCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/circular_progress"
                android:background="@drawable/circular_background"
                android:progress="65"
                android:max="100"
                android:rotation="-90"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65%"
                    android:textColor="@color/white"
                    android:textSize="56sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvStatusVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRAINING"
                    android:textColor="@color/gray_light"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Info Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true"
            android:layout_marginBottom="24dp">

            <!-- Voltage Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card_outlined"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VOLTAGE"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvVoltageVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4200mV"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Temp Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card_outlined"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMP"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvTempVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32.0Â°C"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Wattage Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card_outlined"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POWER (LIVE)"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvWattageVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.2W"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Prediction Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card_outlined"
                android:padding="16dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvPredictionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIME LEFT"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvPredictionVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculated..."
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </GridLayout>

        <!-- CABLE BENCHMARKER CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_outlined"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CABLE HEALTH CHECK"
                        android:textColor="@color/gray_light"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/tvBenchmarkStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyzer Ready"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvBenchmarkGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/gray_light"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:paddingEnd="8dp"/>
            </LinearLayout>

            <!-- Test Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBenchmark"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:max="100"
                android:progress="0"
                android:visibility="gone"
                android:progressTint="@color/white"/>

            <!-- RESULTS GRID -->
            <GridLayout
                android:id="@+id/layoutBenchmarkResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvResultSpeed"
                    android:text="Avg: 0W"
                    android:textColor="@color/white"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvResultRipple"
                    android:text="Ripple: 0mV"
                    android:textColor="@color/white"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvResultStability"
                    android:text="Stability: 0/10"
                    android:textColor="@color/white"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/tvResultType"
                    android:text="Type: --"
                    android:textColor="@color/white"
                    android:layout_columnWeight="1"/>
            </GridLayout>

            <TextView
                android:id="@+id/tvBenchmarkWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRunBenchmark"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:text="START DIAGNOSTIC"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>